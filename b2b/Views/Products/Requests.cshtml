@model List<b2b.Models.ProductRequestListItem>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Teklif Talepleri";
    ViewBag.ActivePage = "Products";
}

<div class="container-fluid flex-grow-1 container-p-y">
    <h4 class="font-weight-bold py-3 mb-0">Teklif Talepleri</h4>
    <div class="text-muted small mt-0 mb-4 d-block breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/"><i class="feather icon-home"></i></a></li>
            <li class="breadcrumb-item">Ürünler</li>
            <li class="breadcrumb-item active">Teklif Talepleri</li>
        </ol>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <form method="get" class="form-inline">
                <label class="mr-2">Durum</label>
                @{ var statusFilter = ViewBag.StatusFilter as string; }
                <select name="status" class="custom-select mr-2">
                    <option value="">Tümü</option>
                    @if (string.Equals(statusFilter, "Beklemede")) {<option value="Beklemede" selected>Beklemede</option>} else {<option value="Beklemede">Beklemede</option>}
                    @if (string.Equals(statusFilter, "Yanıtlandı")) {<option value="Yanıtlandı" selected>Yanıtlandı</option>} else {<option value="Yanıtlandı">Yanıtlandı</option>}
                    @if (string.Equals(statusFilter, "İptal")) {<option value="İptal" selected>İptal</option>} else {<option value="İptal">İptal</option>}
                </select>
                <button type="submit" class="btn btn-primary">Filtrele</button>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            @Html.AntiForgeryToken()
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Tarih</th>
                            <th>Müşteri</th>
                            <th>Ürün</th>
                            <th>Tip</th>
                            <th>Açıklama</th>
                            <th>Durum</th>
                            <th class="text-right">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr data-id="@item.Id">
                                    <td>@item.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>@item.CustomerName</td>
                                    <td>@item.ProductName</td>
                                    <td>@item.RequestType</td>
                                    <td>@item.Description</td>
                                    <td><span class="badge @(item.Status=="Beklemede"?"badge-warning": item.Status=="Yanıtlandı"?"badge-success":"badge-secondary")">@item.Status</span></td>
                                    <td class="text-right">
                                        <div class="btn-group btn-group-sm">
                                            <button type="button" class="btn btn-outline-primary" onclick="openMessage(@item.Id, '@item.CustomerName')"><i class="feather icon-message-square"></i> Mesaj</button>
                                            <button type="button" class="btn btn-outline-success" onclick="openReply(@item.Id, '@item.ProductName')"><i class="feather icon-check"></i> Teklifi Yanıtla</button>
                                            <a class="btn btn-outline-secondary" href="mailto:@item.CustomerName"><i class="feather icon-mail"></i> E-posta</a>
                                            <button type="button" class="btn btn-outline-dark dropdown-toggle dropdown-toggle-split" data-toggle="dropdown"></button>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <a class="dropdown-item" href="#" onclick="updateStatus(@item.Id,'Yanıtlandı')">Durumu: Yanıtlandı</a>
                                                <a class="dropdown-item" href="#" onclick="updateStatus(@item.Id,'İptal')">Durumu: İptal</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">
                                    Kayıt bulunamadı.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
function updateStatus(id, status){
    fetch('@Url.Action("UpdateRequestStatus","Products")', {
        method: 'POST',
        headers: { 'Content-Type':'application/x-www-form-urlencoded; charset=UTF-8', 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val(), 'X-Requested-With':'XMLHttpRequest' },
        body: new URLSearchParams({ id: id, status: status })
    }).then(r=>r.json()).then(function(r){
        if(r && r.success){
            var $tr = $('tr[data-id="'+id+'"]');
            $tr.find('td:nth-child(6) .badge')
                .text(status)
                .removeClass('badge-warning badge-success badge-secondary')
                .addClass(status==='Beklemede'?'badge-warning': status==='Yanıtlandı'?'badge-success':'badge-secondary');
        } else {
            $('<div class="alert alert-danger alert-dismissible fade show" role="alert">'+((r&&r.message)||'Hata')+'<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>')
              .appendTo('.container-p-y').delay(2500).fadeOut(400, function(){ $(this).remove(); });
        }
    }).catch(function(){
        $('<div class="alert alert-danger alert-dismissible fade show" role="alert">İşlem sırasında hata oluştu<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>')
          .appendTo('.container-p-y').delay(2500).fadeOut(400, function(){ $(this).remove(); });
    });
}

function openMessage(id, customer){
  $('#messageModalTitle').text(customer+' ile Mesaj');
  $('#messageRequestId').val(id);
  $('#messageText').val('');
  $('#messageModal').modal('show');
}
function openReply(id, product){
  $('#replyModalTitle').text(product+' için Teklif');
  $('#replyRequestId').val(id);
  $('#replyPrice').val('');
  $('#replyNote').val('');
  $('#replyModal').modal('show');
}
</script>
}

<!-- Mesaj modalı -->
<div class="modal fade" id="messageModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header"><h5 id="messageModalTitle" class="modal-title">Mesaj</h5><button type="button" class="close" data-dismiss="modal"><span>&times;</span></button></div>
      <div class="modal-body">
        <input type="hidden" id="messageRequestId">
        <div class="form-group"><label>Mesaj</label><textarea id="messageText" class="form-control" rows="4"></textarea></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
        <button type="button" class="btn btn-primary" onclick="$('#messageModal').modal('hide');$('<div class=\'alert alert-success alert-dismissible fade show\' role=\'alert\'>Mesaj gönderildi<button type=\'button\' class=\'close\' data-dismiss=\'alert\'><span>&times;</span></button></div>').appendTo('.container-p-y').delay(2000).fadeOut(400,function(){ $(this).remove(); });">Gönder</button>
      </div>
    </div>
  </div>
 </div>

<!-- Teklife yanıt modalı -->
<div class="modal fade" id="replyModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header"><h5 id="replyModalTitle" class="modal-title">Teklif Yanıtı</h5><button type="button" class="close" data-dismiss="modal"><span>&times;</span></button></div>
      <div class="modal-body">
        <input type="hidden" id="replyRequestId">
        <div class="form-group"><label>Birim Fiyat (₺)</label><input type="number" step="0.01" id="replyPrice" class="form-control"></div>
        <div class="form-group"><label>Not</label><textarea id="replyNote" class="form-control" rows="3"></textarea></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
        <button type="button" class="btn btn-success" onclick="$('#replyModal').modal('hide');$('<div class=\'alert alert-success alert-dismissible fade show\' role=\'alert\'>Teklif yanıtlandı<button type=\'button\' class=\'close\' data-dismiss=\'alert\'><span>&times;</span></button></div>').appendTo('.container-p-y').delay(2000).fadeOut(400,function(){ $(this).remove(); });">Gönder</button>
      </div>
    </div>
  </div>
 </div>


