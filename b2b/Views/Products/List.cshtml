@model b2b.Models.ProductListViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Ürün Listesi";
    ViewBag.ActivePage = "Products";
}

<!-- [ content ] Start -->
<div class="container-fluid flex-grow-1 container-p-y">
    <div class="d-flex">
        <div class="flex-grow-1">
            <h4 class="font-weight-bold py-3 mb-0">Ürün Listesi</h4>
        </div>
        <div class="">
            <a href="@Url.Action("Create", "Products")" class="btn btn-primary btn-glow-primary">
                <span class="ion ion-md-add"></span>&nbsp; Yeni Ürün Ekle
            </a>
        </div>
    </div>
    <div class="text-muted small mt-0 mb-4 d-block breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/"><i class="feather icon-home"></i></a></li>
            <li class="breadcrumb-item">Ürünler</li>
            <li class="breadcrumb-item active">Ürün Listesi</li>
        </ol>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" id="filterForm">
                <div class="form-row align-items-center">
                    <div class="col-md my-2">
                        <label class="form-label">Arama</label>
                        <input type="text" class="form-control" name="searchTerm" value="@Model.SearchTerm" placeholder="Ürün adı, SKU, açıklama...">
                    </div>
                    <div class="col-md my-2">
                        <label class="form-label">Kategori</label>
                        <select class="custom-select" name="category">
                            <option value="">Tümü</option>
                            @foreach (var category in Model.Categories)
                            {
                                if (Model.CategoryFilter == category)
                                {
                                    <option value="@category" selected>@category</option>
                                }
                                else
                                {
                                    <option value="@category">@category</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md my-2">
                        <label class="form-label">Marka</label>
                        <select class="custom-select" name="brand">
                            <option value="">Tümü</option>
                            @foreach (var brand in Model.Brands)
                            {
                                if (Model.BrandFilter == brand)
                                {
                                    <option value="@brand" selected>@brand</option>
                                }
                                else
                                {
                                    <option value="@brand">@brand</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md my-2">
                        <label class="form-label">Durum</label>
                        <select class="custom-select" name="status">
                            <option value="">Tümü</option>
                            @if (Model.StatusFilter == "Aktif")
                            {
                                <option value="Aktif" selected>Aktif</option>
                            }
                            else
                            {
                                <option value="Aktif">Aktif</option>
                            }
                            @if (Model.StatusFilter == "Pasif")
                            {
                                <option value="Pasif" selected>Pasif</option>
                            }
                            else
                            {
                                <option value="Pasif">Pasif</option>
                            }
                            @if (Model.StatusFilter == "Tükendi")
                            {
                                <option value="Tükendi" selected>Tükendi</option>
                            }
                            else
                            {
                                <option value="Tükendi">Tükendi</option>
                            }
                        </select>
                    </div>
                    <div class="col-md my-2">
                        <label class="form-label">Stok Durumu</label>
                        <select class="custom-select" name="lowStock">
                            <option value="">Tümü</option>
                            @if (Model.StockFilter == true)
                            {
                                <option value="true" selected>Kritik Stok</option>
                            }
                            else
                            {
                                <option value="true">Kritik Stok</option>
                            }
                            @if (Model.StockFilter == false)
                            {
                                <option value="false" selected>Normal Stok</option>
                            }
                            else
                            {
                                <option value="false">Normal Stok</option>
                            }
                        </select>
                    </div>
                    <div class="col-md col-xl-3 my-2 d-flex align-items-end">
                        <div class="btn-group w-100">
                            <button type="submit" class="btn btn-primary">Filtrele</button>
                            <a href="@Url.Action("List","Products")" class="btn btn-outline-secondary">Sıfırla</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- / Filters -->

    <div class="card">
        @Html.AntiForgeryToken()
        <div class="card-datatable table-responsive">
            <table id="product-list" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Ürün</th>
                        <th>SKU</th>
                        <th>Kategori</th>
                        <th>Marka</th>
                        <th>Stok</th>
                        <th>Fiyat</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Products.Any())
                    {
                        @foreach (var product in Model.Products)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                                        {
                                            <img src="@product.ImageUrl" alt="@product.Name" class="ui-w-40 rounded" style="width: 40px; height: 40px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="ui-w-40 rounded bg-light d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                <i class="feather icon-package text-muted"></i>
                                            </div>
                                        }
                                        <div class="ml-3">
                                            <div class="font-weight-semibold">@product.Name</div>
                                            @if (!string.IsNullOrEmpty(product.Description))
                                            {
                                                <div class="text-muted small">
                                                    @if (product.Description.Length > 50)
                                                    {
                                                        @(product.Description.Substring(0, 50) + "...")
                                                    }
                                                    else
                                                    {
                                                        @product.Description
                                                    }
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>@(product.SKU ?? "-")</td>
                                <td>@(product.Category ?? "-")</td>
                                <td>@(product.Brand ?? "-")</td>
                                <td>
                                    @if (product.IsLowStock)
                                    {
                                        <span class="text-danger font-weight-semibold">
                                            @product.Stock @product.Unit
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-success font-weight-semibold">
                                            @product.Stock @product.Unit
                                        </span>
                                    }
                                    @if (product.IsLowStock)
                                    {
                                        <span class="badge badge-danger ml-1">Kritik</span>
                                    }
                                </td>
                                <td>
                                    <span class="font-weight-semibold">@product.Price.ToString("C")</span>
                                </td>
                                <td>
                                    @if (product.Status == "Aktif")
                                    {
                                        <span class="badge badge-success">@product.Status</span>
                                    }
                                    else if (product.Status == "Pasif")
                                    {
                                        <span class="badge badge-secondary">@product.Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-warning">@product.Status</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Detail", "Products", new { id = product.Id })" class="btn btn-sm btn-outline-secondary" title="Detay">
                                            <i class="feather icon-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", "Products", new { id = product.Id })" class="btn btn-sm btn-outline-primary" title="Düzenle">
                                            <i class="feather icon-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteProduct(@product.Id)" title="Sil">
                                            <i class="feather icon-trash-2"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center py-4">
                                <div class="text-muted">
                                    <i class="feather icon-package" style="font-size: 3rem;"></i>
                                    <div class="mt-2">Henüz ürün eklenmemiş</div>
                                    <a href="@Url.Action("Create", "Products")" class="btn btn-primary btn-sm mt-2">İlk Ürününü Ekle</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- [ content ] End -->

@section Scripts {
    <script>
        $(document).ready(function() {
            // DataTable yüklü değilse hatayı yeme
            if ($.fn && $.fn.DataTable) {
                $('#product-list').DataTable({
                    "language": { "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json" },
                    "pageLength": 25,
                    "order": [[0, "asc"]],
                    "responsive": true
                });
            }

            // Filter form submit
            $('#filterForm select').change(function() {
                $('#filterForm').submit();
            });
        });

        function deleteProduct(id) {
            if (!confirm('Bu ürünü silmek istediğinizden emin misiniz?')) return;
            var token = $('input[name="__RequestVerificationToken"]').val();
            fetch('@Url.Action("Delete","Products")', {
                method: 'POST',
                headers: { 'Content-Type':'application/x-www-form-urlencoded; charset=UTF-8', 'RequestVerificationToken': token, 'X-Requested-With':'XMLHttpRequest' },
                body: new URLSearchParams({ id: id })
            }).then(r=>r.json()).then(function(r){
                if(r && r.success){ window.location.reload(); }
                else { alert('Ürün silinirken bir hata oluştu: '+((r&&r.message)||'')); }
            }).catch(function(){ alert('Ürün silinirken bir hata oluştu.'); });
        }
    </script>
} 