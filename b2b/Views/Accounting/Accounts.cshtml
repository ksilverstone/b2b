    <!-- Demo - Kaldırıldı çünkü jQuery çakışması yaratıyor -->
    <!-- <script src="~/js/demo.js"></script> -->

<script>
    // jQuery'nin yüklendiğinden emin ol
    if (typeof jQuery === 'undefined') {
        console.error('jQuery yüklenemedi!');
    } else {
        console.log('jQuery başarıyla yüklendi, versiyon:', jQuery.fn.jquery);
    }

    $(document).ready(function() {
        console.log('Document ready çalıştı');
        
        // Sidebar'ı yeniden başlat
        if (typeof sidenav !== 'undefined') {
            sidenav.init();
        }
        
        // Sidebar toggle işlevini manuel olarak ekle
        $('.sidenav-toggle').on('click', function(e) {
            e.preventDefault();
            var $parent = $(this).closest('.sidenav-item');
            var $submenu = $parent.find('.sidenav-menu');
            
            // Diğer açık menüleri kapat
            $('.sidenav-menu').not($submenu).slideUp();
            $('.sidenav-item').not($parent).removeClass('open');
            
            // Bu menüyü aç/kapat
            $parent.toggleClass('open');
            $submenu.slideToggle();
        });
        
        // Basit tablo (DataTables olmadan)

        // Filtreleme fonksiyonu
        $('#applyFilters').on('click', function() {
            var statusFilter = $('#statusFilter').val();
            var groupFilter = $('#groupFilter').val();
            var balanceFilter = $('#balanceFilter').val();
            var searchFilter = $('#searchFilter').val();
            var startDateFilter = $('#startDateFilter').val();
            var endDateFilter = $('#endDateFilter').val();
            
            // Tüm satırları gizle
            $('.expandable-row').hide();
            $('.expanded-details').hide(); // Detay satırlarını da gizle
            
            // Filtreleme
            $('.expandable-row').each(function() {
                var row = $(this);
                var name = row.find('td:eq(1)').text().trim();
                var email = row.find('td:eq(3)').text().trim();
                var group = row.find('td:eq(2)').text().trim();
                var status = row.find('td:eq(6)').text().trim();
                var balanceText = row.find('td:eq(5)').text().trim();
                var balance = parseFloat(balanceText.replace(/[^\d.-]/g, '')) || 0;
                var dateText = row.find('td:eq(0)').text().trim();
                var date = new Date(dateText.split('.').reverse().join('-'));
                
                var showRow = true;
                
                // Arama filtresi
                if (searchFilter) {
                    var searchLower = searchFilter.toLowerCase();
                    if (!name.toLowerCase().includes(searchLower) && !email.toLowerCase().includes(searchLower)) {
                        showRow = false;
                    }
                }
                
                // Cari Grubu filtresi
                if (groupFilter && group !== groupFilter) {
                    showRow = false;
                }
                
                // Durum filtresi
                if (statusFilter && status !== statusFilter) {
                    showRow = false;
                }
                
                // Bakiye filtresi
                if (balanceFilter) {
                    if (balanceFilter === 'positive' && balance <= 0) showRow = false;
                    if (balanceFilter === 'negative' && balance >= 0) showRow = false;
                    if (balanceFilter === 'zero' && balance !== 0) showRow = false;
                }
                
                // Tarih filtresi
                if (startDateFilter && date < new Date(startDateFilter)) {
                    showRow = false;
                }
                if (endDateFilter && date > new Date(endDateFilter)) {
                    showRow = false;
                }
                
                if (showRow) {
                    row.show();
                }
            });
        });
        
        // Filtreleri temizle
        $('#clearFilters').on('click', function() {
            $('#statusFilter').val('');
            $('#groupFilter').val('');
            $('#balanceFilter').val('');
            $('#searchFilter').val('');
            $('#startDateFilter').val('');
            $('#endDateFilter').val('');
            $('.expandable-row').show();
            $('.expanded-details').hide(); // Detay satırlarını gizle
        });

        // Expandable row functionality
        $('.expandable-row').on('click', function(e) {
            // Eğer tıklanan element bir buton ise expand yapma
            if ($(e.target).closest('.table-action').length > 0) {
                return;
            }
            
            var rowId = $(this).data('id');
            var detailsRow = $('#details-' + rowId);
            
            // Diğer açık satırları kapat
            $('.expanded-details').not(detailsRow).removeClass('show').hide();
            $('.expandable-row').not(this).removeClass('bg-light');
            
            // Bu satırı aç/kapat
            if (detailsRow.hasClass('show')) {
                detailsRow.removeClass('show').hide();
                $(this).removeClass('bg-light');
            } else {
                detailsRow.addClass('show').show();
                $(this).addClass('bg-light');
            }
        });

        // Form submit
        $('#addAccountForm').on('submit', function(e) {
            e.preventDefault();
            addAccount();
        });
        
        // Düzenleme form submit
        $('#editAccountForm').on('submit', function(e) {
            e.preventDefault();
            updateAccount();
        });
        
        // Modal kapatma işlevi
        $('.modal .close, .modal .btn-secondary').on('click', function() {
            $(this).closest('.modal').modal('hide');
            $('body').removeClass('modal-open');
            $('.modal-backdrop').remove();
        });

        // Modal kapatma işlevi
        $('.modal .close, .modal .btn-secondary').on('click', function() {
            $(this).closest('.modal').modal('hide');
            $('body').removeClass('modal-open');
            $('.modal-backdrop').remove();
        });

        // Modal dışına tıklayınca kapatma
        $('.modal').on('click', function(e) {
            if (e.target === this) {
                $(this).modal('hide');
                $('body').removeClass('modal-open');
                $('.modal-backdrop').remove();
            }
        });

        // Modal açıldığında formu temizle
        $('#modal-add-account').on('show.bs.modal', function() {
            clearForm();
        });

        // Modal kapandığında formu temizle
        $('#modal-add-account').on('hidden.bs.modal', function() {
            clearForm();
        });
    });

    function addAccount() {
        var accountData = {
            Name: $('#AccountName').val(),
            Email: $('#AccountEmail').val(),
            Phone: $('#AccountPhone').val(),
            Address: $('#AccountAddress').val(),
            TaxNumber: $('#AccountTaxNumber').val(),
            TaxOffice: $('#AccountTaxOffice').val(),
            Balance: parseFloat($('#AccountBalance').val()) || 0,
            Group: $('#AccountGroup').val(),
            IsActive: $('.switcher-input').is(':checked')
        };

        console.log('IsActive değeri:', $('.switcher-input').is(':checked'));
        console.log('Gönderilecek veri:', accountData);

        // Validasyon
        if (!accountData.Name || !accountData.Email) {
            alert('Cari adı ve e-posta alanları zorunludur!');
            return;
        }

        // AJAX ile sunucuya gönder
        $.ajax({
            url: '/Accounting/AddAccount',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(accountData),
            success: function(response) {
                if (response.success) {
                    // Başarı mesajı göster
                    alert(response.message);
                    
                    // Modal'ı kapat
                    $('#modal-add-account').modal('hide');
                    $('body').removeClass('modal-open');
                    $('.modal-backdrop').remove();
                    
                    // Formu temizle
                    clearForm();
                    
                    // Sayfayı yenile (güncel veriler için)
                    setTimeout(function() {
                        location.reload();
                    }, 500);
                } else {
                    alert('Hata: ' + response.message);
                }
            },
            error: function(xhr, status, error) {
                alert('Bir hata oluştu! Detay: ' + xhr.responseText);
            }
        });
    }

    function editAccount(id) {
        console.log('Düzenleme işlemi başlatıldı, ID:', id);
        
        // Cari bilgilerini getir
        $.ajax({
            url: '/Accounting/GetAccount',
            type: 'GET',
            data: { id: id },
            success: function(response) {
                console.log('Düzenleme response:', response);
                if (response.success) {
                    var account = response.account;
                    
                    // Modal'ı doldur
                    $('#EditAccountId').val(account.id);
                    $('#EditAccountName').val(account.name);
                    $('#EditAccountEmail').val(account.email);
                    $('#EditAccountPhone').val(account.phone);
                    $('#EditAccountAddress').val(account.address);
                    $('#EditAccountTaxNumber').val(account.taxNumber);
                    $('#EditAccountTaxOffice').val(account.taxOffice);
                    $('#EditAccountBalance').val(account.balance);
                    $('#EditAccountIsActive').prop('checked', account.status === 'Aktif');
                    
                    // Modal'ı aç
                    $('#modal-edit-account').modal('show');
                } else {
                    alert('Hata: ' + response.message);
                }
            },
            error: function(xhr, status, error) {
                console.error('Düzenleme hatası:', xhr.responseText);
                alert('Bir hata oluştu! Detay: ' + xhr.responseText);
            }
        });
    }

    function deleteAccount(id) {
        if (confirm('Bu cariyi silmek istediğinizden emin misiniz? Bu işlem geri alınamaz!')) {
            console.log('Silme işlemi başlatıldı, ID:', id);
            
            $.ajax({
                url: '/Accounting/DeleteAccount',
                type: 'POST',
                data: { id: id },
                success: function(response) {
                    console.log('Silme response:', response);
                    if (response.success) {
                        // Başarı mesajı göster
                        alert(response.message);
                        
                        // Satırı gizle ve animasyon ekle
                        var row = $('.expandable-row[data-id="' + id + '"]');
                        var detailsRow = $('#details-' + id);
                        
                        row.fadeOut(400, function() {
                            row.remove();
                        });
                        detailsRow.fadeOut(400, function() {
                            detailsRow.remove();
                        });
                        
                        // Başarı mesajı göster
                        var successMsg = $('<div class="alert alert-success alert-dismissible fade show" role="alert">' +
                            '<strong>Başarılı!</strong> Cari başarıyla silindi.' +
                            '<button type="button" class="close" data-dismiss="alert">' +
                            '<span aria-hidden="true">&times;</span></button></div>');
                        
                        $('.container-fluid').prepend(successMsg);
                        
                        // 3 saniye sonra mesajı kaldır
                        setTimeout(function() {
                            successMsg.fadeOut();
                        }, 3000);
                    } else {
                        alert('Hata: ' + response.message);
                    }
                },
                error: function(xhr, status, error) {
                    console.error('Silme hatası:', xhr.responseText);
                    alert('Bir hata oluştu! Detay: ' + xhr.responseText);
                }
            });
        }
    }

    function createAccountRow(account) {
        var statusClass = account.Status === 'Aktif' ? 'status-active' : 'status-inactive';
        var balanceClass = account.Balance >= 0 ? 'text-success' : 'text-danger';
        
        return '<tr class="expandable-row" data-id="' + account.Id + '">' +
            '<td class="align-middle">' + new Date().toLocaleDateString('tr-TR') + '</td>' +
            '<td class="align-middle">' +
                '<div>' +
                    '<a href="#!" class="text-body font-weight-semibold">' + account.Name + '</a>' +
                    '<div class="text-muted small">Cari No: ' + account.Id + '</div>' +
                '</div>' +
            '</td>' +
            '<td class="align-middle">' + (account.Group || 'Müşteri') + '</td>' +
            '<td class="align-middle">' + account.Email + '</td>' +
            '<td class="align-middle">' + account.Phone + '</td>' +
            '<td class="align-middle">' +
                '<span class="' + balanceClass + ' font-weight-semibold">' + 
                    parseFloat(account.Balance).toFixed(2) + ' ₺' +
                '</span>' +
            '</td>' +
            '<td class="align-middle">' +
                '<span class="status-badge ' + statusClass + '">' + account.Status + '</span>' +
            '</td>' +
            '<td class="table-action">' +
                '<a href="/Accounting/Statement/' + account.Id + '" class="btn btn-icon btn-outline-primary" title="Cari Ekstresi Görüntüle">' +
                    '<i class="feather icon-file-text"></i>' +
                '</a>' +
                '<a href="/Orders/History/' + account.Id + '" class="btn btn-icon btn-outline-info" title="Sipariş Geçmişini Gör">' +
                    '<i class="feather icon-shopping-cart"></i>' +
                '</a>' +
                '<a href="#!" class="btn btn-icon btn-outline-success" title="Carinin Bilgilerini Düzenle" onclick="editAccount(' + account.Id + ')">' +
                    '<i class="feather icon-edit"></i>' +
                '</a>' +
                '<a href="#!" class="btn btn-icon btn-outline-danger" title="Carileri Sil" onclick="deleteAccount(' + account.Id + ')">' +
                    '<i class="feather icon-trash-2"></i>' +
                '</a>' +
            '</td>' +
        '</tr>';
    }

    function clearForm() {
        $('#AccountName').val('');
        $('#AccountEmail').val('');
        $('#AccountPhone').val('');
        $('#AccountAddress').val('');
        $('#AccountTaxNumber').val('');
        $('#AccountTaxOffice').val('');
        $('#AccountBalance').val('');
        $('#AccountGroup').val('Müşteri');
        $('.switcher-input').prop('checked', true);
    }
    
    function updateAccount() {
        var accountData = {
            Id: parseInt($('#EditAccountId').val()),
            Name: $('#EditAccountName').val(),
            Email: $('#EditAccountEmail').val(),
            Phone: $('#EditAccountPhone').val(),
            Address: $('#EditAccountAddress').val(),
            TaxNumber: $('#EditAccountTaxNumber').val(),
            TaxOffice: $('#EditAccountTaxOffice').val(),
            Balance: parseFloat($('#EditAccountBalance').val()) || 0,
            IsActive: $('#EditAccountIsActive').is(':checked')
        };

        // Validasyon
        if (!accountData.Name || !accountData.Email) {
            alert('Cari adı ve e-posta alanları zorunludur!');
            return;
        }

        // AJAX ile sunucuya gönder
        $.ajax({
            url: '/Accounting/UpdateAccount',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(accountData),
            success: function(response) {
                if (response.success) {
                    alert(response.message);
                    $('#modal-edit-account').modal('hide');
                    $('body').removeClass('modal-open');
                    $('.modal-backdrop').remove();
                    setTimeout(function() {
                        location.reload();
                    }, 500);
                } else {
                    alert('Hata: ' + response.message);
                }
            },
            error: function(xhr, status, error) {
                alert('Bir hata oluştu! Detay: ' + xhr.responseText);
            }
        });
    }

    function showStatementModal() {
        alert('Cari ekstresi görüntülemek için önce bir cari seçin.');
    }
</script>

