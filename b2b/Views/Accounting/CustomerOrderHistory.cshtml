@model List<b2b.Controllers.OrderHistoryViewModel>
@{
    ViewData["Title"] = "Cari Sipariş Geçmişi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- [ content ] Start -->
<div class="container-fluid flex-grow-1 container-p-y">
    <!-- Başlık -->
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h4 class="font-weight-bold py-3 mb-0">@ViewBag.CustomerName - Sipariş Geçmişi</h4>
        </div>
        <div>
            <a href="/Accounting/Accounts" class="btn btn-secondary">
                <i class="feather icon-arrow-left mr-2"></i> Geri Dön
            </a>
        </div>
    </div>
    
    <div class="text-muted small mt-0 mb-4 d-block breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/"><i class="feather icon-home"></i></a></li>
            <li class="breadcrumb-item"><a href="/Accounting/Accounts">Cari Yönetimi</a></li>
            <li class="breadcrumb-item active">Sipariş Geçmişi</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="thead-light">
                                    <tr>
                                        <th>Sipariş No</th>
                                        <th>Cari</th>
                                        <th>Tarih</th>
                                        <th>Ürün Sayısı</th>
                                        <th>Toplam Tutar</th>
                                        <th>Durum</th>
                                        <th>Açıklama</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model)
                                    {
                                        <tr>
                                            <td class="align-middle">
                                                <div>
                                                    <span class="text-body font-weight-semibold">@order.OrderNumber</span>
                                                </div>
                                            </td>
                                            <td class="align-middle">
                                                <span class="text-body">@order.CustomerName</span>
                                            </td>
                                            <td class="align-middle">
                                                @order.OrderDate.ToString("dd.MM.yyyy")
                                            </td>
                                            <td class="align-middle">
                                                <span class="badge badge-primary">@order.ItemCount</span>
                                            </td>
                                            <td class="align-middle">
                                                <span class="font-weight-semibold">@order.TotalAmount.ToString("N2") ₺</span>
                                            </td>
                                            <td class="align-middle">
                                                @{
                                                    var statusClass = order.Status switch
                                                    {
                                                        "Beklemede" => "badge-warning",
                                                        "Onaylandı" => "badge-success",
                                                        "Hazırlanıyor" => "badge-info",
                                                        "Kargoda" => "badge-primary",
                                                        "Teslim Edildi" => "badge-success",
                                                        "İptal Edildi" => "badge-danger",
                                                        _ => "badge-secondary"
                                                    };
                                                }
                                                <span class="badge @statusClass">@order.Status</span>
                                            </td>
                                            <td class="align-middle">
                                                @(string.IsNullOrEmpty(order.Description) ? "-" : order.Description)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="feather icon-shopping-cart display-4 text-muted"></i>
                            <h5 class="mt-3 text-muted">Henüz sipariş bulunmuyor</h5>
                            <p class="text-muted">Bu cari için henüz sipariş oluşturulmamış.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- [ content ] End -->
