@model List<b2b.Controllers.OrderHistoryViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Siparişlerim";
    ViewBag.ActivePage = "Orders";
}

<div class="container-fluid flex-grow-1 container-p-y">
    <div class="d-flex">
        <div class="flex-grow-1">
            <h4 class="font-weight-bold py-3 mb-0">Siparişlerim</h4>
        </div>
    </div>
    <div class="text-muted small mt-0 mb-4 d-block breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/"><i class="feather icon-home"></i></a></li>
            <li class="breadcrumb-item active">Siparişlerim</li>
        </ol>
    </div>

    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th>Sipariş No</th>
                                <th>Tarih</th>
                                <th>Adet</th>
                                <th class="text-right">Tutar</th>
                                <th>Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var o in Model)
                        {
                            <tr>
                                <td class="font-weight-semibold">@o.OrderNumber</td>
                                <td class="text-nowrap">@o.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>@o.ItemCount</td>
                                <td class="text-right">@o.TotalAmount.ToString("C")</td>
                                <td>
                                    <span class="badge @(o.Status=="Beklemede"?"badge-warning": o.Status=="İşleniyor"?"badge-info": o.Status=="Kargoda"?"badge-primary": o.Status=="Teslim Edildi"?"badge-success":"badge-secondary")">@o.Status</span>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center text-muted py-5">
                    <i class="feather icon-clipboard" style="font-size:4rem;"></i>
                    <div class="mt-3">Henüz siparişiniz bulunmuyor</div>
                </div>
            }
        </div>
    </div>
</div>


