@model b2b.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

@section Styles {
    <style>
        .hover-lift {
            transition: all 0.3s ease;
        }
        
        .hover-lift:hover {
            transform: translateY(-3px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
        
        .card.border-primary:hover {
            border-color: #0056b3 !important;
        }
        
        .card.border-warning:hover {
            border-color: #e0a800 !important;
        }
        
        .card.border-info:hover {
            border-color: #117a8b !important;
        }
        
        .card.border-success:hover {
            border-color: #1e7e34 !important;
        }
        
        /* Tüm kartlara hover efekti */
        .card {
            transition: all 0.3s ease;
        }
        
        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.25rem 0.75rem rgba(0, 0, 0, 0.1);
        }
        
        /* Ürün katalog kartları için özel hover */
        .card.border-primary:hover,
        .card.border-warning:hover,
        .card.border-success:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.2);
        }
    </style>
}

<!-- Dashboard İçeriği -->
<div class="container-fluid flex-grow-1 container-p-y">
    <h4 class="font-weight-bold py-3 mb-0">Dashboard</h4>
    <div class="text-muted small mt-0 mb-4 d-block breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#"><i class="feather icon-home"></i></a></li>
            <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
            <li class="breadcrumb-item active">Main</li>
        </ol>
    </div>

    <!-- Ana Dashboard İçeriği -->
    <div class="row">
        @if (!User.IsInRole("Buyer"))
        {
            <!-- 1. Satır - Ana Kartlar (Template'deki gibi) -->
            <div class="col-sm-6 col-xl-3">
                <div class="card mb-4 bg-primary text-white hover-lift">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="ion ion-ios-cart display-4"></div>
                            <div class="ml-4">
                                <div class="text-white small">Toplam Sipariş</div>
                                <div class="text-large">@Model.Stats.TotalOrders</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xl-3">
                <div class="card mb-4 bg-warning text-white hover-lift">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="ion ion-ios-time display-4"></div>
                            <div class="ml-4">
                                <div class="text-white small">Bekleyen Sipariş</div>
                                <div class="text-large">@Model.Stats.PendingOrders</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xl-3">
                <div class="card mb-4 bg-success text-white hover-lift">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="ion ion-ios-wallet display-4"></div>
                            <div class="ml-4">
                                <div class="text-white small">Aylık Gelir</div>
                                <div class="text-large">₺@Model.Stats.MonthlyRevenue.ToString("N0")</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xl-3">
                <div class="card mb-4 bg-info text-white hover-lift">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="ion ion-ios-cube display-4"></div>
                            <div class="ml-4">
                                <div class="text-white small">Toplam Ürün</div>
                                <div class="text-large">@Model.Stats.TotalProducts</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- 2. Satır - Grafik Kartları -->
            <div class="col-xl-6">
                <div class="card mb-4">
                    <div class="card-header with-elements">
                        <h6 class="card-header-title mb-0">Sipariş Durumları</h6>
                        <div class="card-header-elements ml-auto">
                            <label class="text m-0">
                                <span class="text-light text-tiny font-weight-semibold align-middle">GÖSTER</span>
                                <span class="switcher switcher-primary switcher-sm d-inline-block align-middle mr-0 ml-2">
                                    <input type="checkbox" class="switcher-input" checked="">
                                    <span class="switcher-indicator">
                                        <span class="switcher-yes"></span>
                                        <span class="switcher-no"></span>
                                    </span>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="card-body">
                        <canvas id="orderStatusChart" height="250"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-xl-6">
                <div class="card mb-4">
                    <div class="card-header with-elements">
                        <h6 class="card-header-title mb-0">Kategori Satışları</h6>
                        <div class="card-header-elements ml-auto">
                            <label class="text m-0">
                                <span class="text-light text-tiny font-weight-semibold align-middle">GÖSTER</span>
                                <span class="switcher switcher-primary switcher-sm d-inline-block align-middle mr-0 ml-2">
                                    <input type="checkbox" class="switcher-input" checked="">
                                    <span class="switcher-indicator">
                                        <span class="switcher-yes"></span>
                                        <span class="switcher-no"></span>
                                    </span>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="card-body">
                        <canvas id="categorySalesChart" height="250"></canvas>
                    </div>
                </div>
            </div>
            
            <!-- 3. Satır - Küçük Kartlar -->
            <div class="col-sm-6 col-xl-3">
                <div class="card mb-4 hover-lift">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="ion ion-ios-checkmark-circle display-4 text-success"></div>
                            <div class="ml-4">
                                <div class="text-muted small">Tamamlanan Sipariş</div>
                                <div class="text-large">@Model.Stats.CompletedOrders</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xl-3">
                <div class="card mb-4 hover-lift">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="ion ion-ios-people display-4 text-info"></div>
                            <div class="ml-4">
                                <div class="text-muted small">Toplam Müşteri</div>
                                <div class="text-large">@Model.Stats.TotalCustomers</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xl-3">
                <div class="card mb-4 hover-lift">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="ion ion-ios-warning display-4 text-warning"></div>
                            <div class="ml-4">
                                <div class="text-muted small">Düşük Stok</div>
                                <div class="text-large">@Model.Stats.LowStockCount</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xl-3">
                <div class="card mb-4 hover-lift">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="ion ion-ios-calculator display-4 text-primary"></div>
                            <div class="ml-4">
                                <div class="text-muted small">Ortalama Sipariş</div>
                                <div class="text-large">₺@Model.Stats.AverageOrderValue.ToString("N0")</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Alıcı Dashboard - Ürün Kataloğu -->
            <div class="col-lg-8">
                <div class="card mb-4 hover-lift">
                    <div class="card-header with-elements">
                        <h6 class="card-header-title mb-0">Ürün Kataloğu</h6>
                        <div class="card-header-elements ml-auto">
                            <a href="/Products/Catalog" class="btn btn-sm btn-primary">Tümünü Gör</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var product in Model.LowStockProducts.Take(3))
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="card border-primary text-center hover-lift">
                                        <div class="card-body p-3">
                                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                                            {
                                                <img src="@product.ImageUrl" alt="@product.Name" class="img-fluid mb-2" style="max-height: 80px; object-fit: cover;">
                                            }
                                            else
                                            {
                                                <div class="ion ion-ios-cube display-4 text-primary mb-2"></div>
                                            }
                                            <h6 class="mb-1">@product.Name</h6>
                                            <p class="text-muted small mb-2">@product.Category</p>
                                            <span class="badge badge-primary">@product.Brand</span>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Alıcı için Quick Actions sağ üstte -->
            <div class="col-lg-4">
                <div class="card mb-4 hover-lift">
                    <div class="card-header with-elements">
                        <h6 class="card-header-title mb-0">Hızlı İşlemler</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var action in Model.QuickActions)
                            {
                                <div class="col-12 mb-3">
                                    <a href="@action.Url" class="card text-decoration-none border-@action.Color hover-lift">
                                        <div class="card-body p-3">
                                            <div class="d-flex align-items-center">
                                                <div class="ui-w-40 rounded bg-@action.Color d-flex align-items-center justify-content-center text-white mr-3">
                                                    <i class="@action.Icon fa-lg"></i>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <h6 class="mb-1 text-dark">@action.Title</h6>
                                                    <p class="mb-0 text-muted small">@action.Description</p>
                                                </div>
                                                <i class="feather icon-chevron-right text-muted"></i>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    
    <!-- Alıcı için Son Teklifler - Ayrı satırda -->
    @if (User.IsInRole("Buyer") && Model.RecentQuotes.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card mb-4 hover-lift">
                    <div class="card-header with-elements">
                        <h6 class="card-header-title mb-0">Son Teklifler</h6>
                        <div class="card-header-elements ml-auto">
                            <a href="/Products/Requests" class="btn btn-sm btn-outline-primary">Tümünü Gör</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Ürün</th>
                                        <th>Talep Türü</th>
                                        <th>Açıklama</th>
                                        <th>Durum</th>
                                        <th>Tarih</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var quote in Model.RecentQuotes)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="ui-w-40 rounded bg-light d-flex align-items-center justify-content-center mr-3">
                                                        <i class="feather icon-file-text text-muted"></i>
                                                    </div>
                                                    <div>
                                                        <div class="font-weight-semibold">@quote.ProductName</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@quote.RequestType</td>
                                            <td>@quote.Description</td>
                                            <td>
                                                <span class="badge badge-@quote.StatusColor">@quote.Status</span>
                                            </td>
                                            <td>@quote.CreatedDate.ToString("dd.MM.yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (!User.IsInRole("Buyer"))
    {
        <!-- Son Siparişler ve Düşük Stok - Sadece Satıcı için -->
        <div class="row">
            <div class="col-xl-8">
                <div class="card mb-4 hover-lift">
                    <div class="card-header with-elements">
                        <h6 class="card-header-title mb-0">Son Siparişler</h6>
                        <div class="card-header-elements ml-auto">
                            <a href="/Accounting/OrderHistory" class="btn btn-sm btn-primary">Tümünü Gör</a>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (Model.RecentOrders.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Sipariş No</th>
                                            <th>Müşteri</th>
                                            <th>Tutar</th>
                                            <th>Durum</th>
                                            <th>Tarih</th>
                                            <th>İşlem</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var order in Model.RecentOrders)
                                        {
                                            <tr>
                                                <td>
                                                    <a href="/Orders/Detail/@order.Id" class="text-primary font-weight-semibold">
                                                        @order.OrderNumber
                                                    </a>
                                                </td>
                                                <td>@order.CustomerName</td>
                                                <td>₺@order.TotalAmount.ToString("N2")</td>
                                                <td>
                                                    <span class="badge badge-@order.StatusColor">@order.Status</span>
                                                </td>
                                                <td>@order.OrderDate.ToString("dd.MM.yyyy")</td>
                                                <td>
                                                    <a href="/Orders/Detail/@order.Id" class="btn btn-sm btn-outline-primary">
                                                        <i class="feather icon-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="feather icon-shopping-cart text-muted" style="font-size: 3rem;"></i>
                                <p class="text-muted mt-2">Henüz sipariş bulunmuyor.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
            
            <!-- Düşük Stok Tablosu -->
            <div class="col-xl-4">
                <div class="card mb-4 hover-lift">
                    <div class="card-header with-elements">
                        <h6 class="card-header-title mb-0">Düşük Stok Uyarıları</h6>
                        <div class="card-header-elements ml-auto">
                            <a href="/Products/Stock" class="btn btn-sm btn-outline-warning">Stok Yönetimi</a>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (Model.StockAlerts.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Ürün</th>
                                            <th>Stok</th>
                                            <th>Durum</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var alert in Model.StockAlerts.Take(5))
                                        {
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <div class="ui-w-30 rounded bg-@alert.Color d-flex align-items-center justify-content-center text-white mr-2">
                                                            <i class="feather icon-alert-triangle fa-sm"></i>
                                                        </div>
                                                        <div>
                                                            <div class="font-weight-semibold small">@alert.ProductName</div>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="badge badge-@alert.Color">@alert.CurrentStock</span>
                                                </td>
                                                <td>
                                                    <small class="text-@alert.Color">@alert.AlertType</small>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-3">
                                <i class="feather icon-check-circle text-success" style="font-size: 2rem;"></i>
                                <p class="text-muted mt-2 small">Tüm ürünlerde yeterli stok bulunuyor.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <script>
        // Sipariş Durum Grafiği
        const orderStatusCtx = document.getElementById('orderStatusChart');
        if (orderStatusCtx) {
            const ctx = orderStatusCtx.getContext('2d');
            new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.OrderStatusCounts.Select(x => x.Status))),
                    datasets: [{
                        data: @Html.Raw(Json.Serialize(Model.OrderStatusCounts.Select(x => x.Count))),
                        backgroundColor: @Html.Raw(Json.Serialize(Model.OrderStatusCounts.Select(x => x.Color))),
                        borderWidth: 2,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
        }

        // Kategori Satışları Grafiği
        @if (Model.CategorySales.Any())
        {
            <text>
            const categorySalesCtx = document.getElementById('categorySalesChart');
            if (categorySalesCtx) {
                const ctx = categorySalesCtx.getContext('2d');
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: @Html.Raw(Json.Serialize(Model.CategorySales.Select(x => x.Category))),
                        datasets: [{
                            label: 'Satış Tutarı (₺)',
                            data: @Html.Raw(Json.Serialize(Model.CategorySales.Select(x => x.TotalSales))),
                            backgroundColor: @Html.Raw(Json.Serialize(Model.CategorySales.Select(x => x.Color))),
                            borderColor: @Html.Raw(Json.Serialize(Model.CategorySales.Select(x => x.Color))),
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    callback: function(value) {
                                        return '₺' + value.toLocaleString();
                                    }
                                }
                            }
                        },
                        plugins: {
                            legend: {
                                display: false
                            }
                        }
                    }
                });
            }
            </text>
        }
    </script>
}
